<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_audit.PendingreviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下发待审核"
                android:textColor="@color/theme_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="任务编号"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/numbering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发起时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/current_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发起人"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/sponsor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"

                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/receiving_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="接收部门"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/choosedepartment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="接收人"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>


            <TextView
                android:id="@+id/receiver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="结束时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/enddate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务描述"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.66dp">

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="附件上传"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/text_there"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="暂无附件"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:visibility="gone"></TextView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="审核意见"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/imageview_right2"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/right"></ImageView>

            <TextView
                android:id="@+id/opinionselection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/imageview_right2"
                android:text="请选择"
                android:textColor="#ffbbbbbb"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务描述"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="15.66dp">

            <com.example.yuhekejioa.Utils.EditTextWithScrollView
                android:id="@+id/yuheedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.33dp"
                android:background="@null"
                android:editable="true"
                android:hint="请输入任务描述"
                android:inputType="none"
                android:maxLength="500"
                android:textColor="#000000"
                android:textColorHint="#ffbbbbbb"
                android:textSize="15sp"></com.example.yuhekejioa.Utils.EditTextWithScrollView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:id="@+id/store_details_ll_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_submit"
                android:layout_width="315dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"

                android:background="@drawable/button_backgroud"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="16sp"></Button>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>