<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_Initiated.InitiateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发起任务单"
                android:textColor="@color/theme_black"
                android:textSize="18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="当前时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/current_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发起人"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/sponsor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"

                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:id="@+id/relative_typeofdelivery"
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发送类型"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/imageview_right5"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/right"></ImageView>


            <TextView
                android:id="@+id/typeofdelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/imageview_right5"

                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:id="@+id/relative_receiving_department"
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/receiving_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="部门"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/imageview_right"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/right"></ImageView>


            <TextView
                android:id="@+id/choosedepartment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/imageview_right"
                android:text="请选择"
                android:textColor="#ffbbbbbb"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout

            android:id="@+id/relative_receiver"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="人员"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/imageview_right1"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/right"></ImageView>


            <TextView
                android:id="@+id/receiver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/imageview_right1"
                android:text="请选择"
                android:textColor="#ffbbbbbb"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="结束时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/imageview_right2"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/right"></ImageView>

            <TextView
                android:id="@+id/enddate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/imageview_right2"
                android:text="请选择"
                android:textColor="#ffbbbbbb"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EDEAEA"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务单标题"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15.66dp">

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16.33dp"
                android:background="@null"
                android:editable="true"
                android:gravity="top|left"
                android:hint="请输入任务标题"
                android:inputType="none"
                android:maxLength="50"
                android:textColor="#000000"
                android:textColorHint="#ffbbbbbb"
                android:textSize="15sp"></EditText>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EDEAEA"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务描述"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15.66dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16.33dp"
                android:background="@null"
                android:editable="true"
                android:gravity="top|left"
                android:hint="请输入任务描述"
                android:inputType="none"
                android:maxLength="500"
                android:textColor="#000000"
                android:textColorHint="#ffbbbbbb"
                android:textSize="15sp"></EditText>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/updatingfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.66dp"
                android:layout_marginTop="5dp"
                android:text="附件上传"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/add_file"></ImageView>
            <!--
            android:scrollbarSize="5dp"                      //设置滚动条的宽度
            android:scrollbarThumbVertical="@color/shenhui"  //设置滚动条的颜色
            android:scrollbars="vertical"                    //设置滚动条的方向（垂直或水平）

            -->
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/nestedlistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/updatingfiles"
                android:layout_marginTop="10dp"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@color/theme_gray"
                android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:id="@+id/store_details_ll_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button_submit"
                android:layout_width="315dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_backgroud"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="16sp"></Button>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>