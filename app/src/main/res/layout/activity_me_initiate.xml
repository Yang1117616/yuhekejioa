<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context=".My_Initiated.MeInitiateActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageview"
                android:text="返回"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我发起的"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_image"
            android:layout_width="190.33dp"
            android:layout_height="145.67dp"
            android:layout_centerInParent="true"
            android:src="@drawable/no_imageview"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="暂无数据"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"></View>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/home_RefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F1F1"
            android:scrollbars="none">

            <androidx.recyclerview.widget.RecyclerView
                android:descendantFocusability="afterDescendants"
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:divider="@null"
                android:listSelector="@color/white"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>