<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="52.5dp"
        android:layout_marginRight="52.5dp"
        android:background="@drawable/dialog_corner_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="47.5dp"
            android:text="提示文字"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/cancel"
                android:layout_width="65dp"
                android:layout_height="26.3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:background="@drawable/myshape_white"
                android:text="取消"
                android:textColor="@color/text_11"
                android:textSize="12sp" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="65dp"
                android:layout_height="26.3dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="50dp"
                android:background="@drawable/myshape"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>