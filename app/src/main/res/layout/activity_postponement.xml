<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".My_Initiated.PostponementActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="进行中(延期不通过)"
                android:textColor="@color/theme_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.67dp"
                android:text="修改"
                android:textColor="#ff006bff"
                android:textSize="15sp" />
        </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="任务编号"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/numbering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发起时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/current_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="发起人"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/sponsor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"

                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:id="@+id/receiving_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="接收部门"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/choosedepartment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="接收人"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/receiver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="结束时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/enddate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务标题"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.66dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="任务描述"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp">

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.66dp"
            android:layout_marginTop="5dp"
            android:text="补充说明"
            android:textColor="#ff000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp">

            <TextView
                android:id="@+id/supplementaryexplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="附件上传"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/text_nofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="暂无附件"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accomplish_List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/white"
            android:overScrollMode="never"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@color/theme_gray"
            android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe5e5e5"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="申请延期时间"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/extensiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="#ff000000"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEAEA"></View>


        <LinearLayout
            android:layout_marginBottom="15dp"
            android:id="@+id/store_details_ll_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_view"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_backgroud"
                android:text="查看每日工作"
                android:textColor="#ffffffff"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="@drawable/button_backgroud"
                android:text="终止"
                android:textColor="#ffffffff"
                android:textSize="16sp"></Button>
        </LinearLayout>


    </LinearLayout>
</ScrollView>


</LinearLayout>