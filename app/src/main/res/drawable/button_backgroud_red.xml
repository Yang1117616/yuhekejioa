<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框 -->
    <stroke
        android:width="0.5dp"
        android:color="#ffff4949" />
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="180dip" />
    <!--背景颜色-->
    <solid android:color="#ffffffff"></solid>

    <!-- padding: Button 里面的文字与Button边界的间隔 -->

    <padding

        android:bottom="5dp"

        android:left="5dp"

        android:right="5dp"

        android:top="5dp"

        />
</shape>